<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="136"
        x:Class="OpenUtau.App.Views.PhoneticAssistant"
        Icon="/Assets/open-utau.ico"
        Title="{DynamicResource phoneticassistant.caption}"
        WindowStartupLocation="CenterScreen"
        Width="400" Height="136" CanResize="False"
        ExtendClientAreaToDecorationsHint="False">
  <Grid Margin="{Binding $parent.WindowDecorationMargin}">
    <StackPanel Margin="10">
      <ComboBox FontSize="12" Height="20" Padding="1" Margin="0,5,0,5" HorizontalAlignment="Stretch" ItemsSource="{Binding G2ps}" SelectedItem="{Binding G2p}"/>
      <TextBox FontSize="12" Height="20" Padding="1" Margin="0,5,0,5" HorizontalAlignment="Stretch" AcceptsReturn="False" AcceptsTab="False" Text="{Binding Grapheme}"/>
      <TextBox TextAlignment="Center" FontSize="12" Padding="1" Margin="0,5,0,5" Name="PhonemesText" HorizontalAlignment="Stretch" TextWrapping="Wrap" Height="40" IsReadOnly="True" Text="{Binding Phonemes}"></TextBox>
      <Button Height="20" Padding="1" Margin="0,5,0,5" HorizontalAlignment="Stretch" Content="{DynamicResource phoneticassistant.copy}" Click="OnCopy"/>
    </StackPanel>
  </Grid>
</Window>
